{
  "compilerOptions": {
    "target": "ESNext", // Output ESNext JavaScript
    "module": "CommonJS", // Use CommonJS for compatibility with Node.js
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow import/export compatibility
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src", // Source directory
    "resolveJsonModule": true, // Support importing JSON files
    "typeRoots": [
      "node_modules/@types"
    ], // Include type definitions from node_modules
  },
  "include": [
    "src/**/*"
  ], // Include all files in the src directory
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}